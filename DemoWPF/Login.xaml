<Window x:Class="DemoWPF.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoWPF"
        mc:Ignorable="d"
        Title="Login" Height="170" Width="300"
        WindowStartupLocation="CenterOwner">
    <StackPanel Background="WhiteSmoke">
        <Label Content="_User Name:" Target="{Binding ElementName=txtUser}"/>
        <TextBox Name="txtUser" Margin="5,0,5,0"/>
        <Label Content="_Password:" Target="{Binding ElementName=passBox}"/>
        <PasswordBox Name="passBox" Margin="5,0,5,0"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="right" Margin="0,15,0,0">
            <Button Name="btnOK" HorizontalAlignment="Right" Width="70" Margin="5" Click="btnOK_Click">OK</Button>
            <Button Name="btnCancel" HorizontalAlignment="Right" VerticalAlignment="Top" Width="70" Margin="5">Cancel</Button>
        </StackPanel>
    </StackPanel>
</Window>
